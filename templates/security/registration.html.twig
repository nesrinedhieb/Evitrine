{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<h1> Inscription </h1>

{{ form_start(form)}}
{{ form_row(form.name, { 'label':'Saisir votre nom: ','attr':{'placeholder':'Nom...'}})}}
{{ form_row(form.email,  { 'label':'Saisir votre email: ','attr':{'placeholder':'Email...'}})}}
{{ form_row(form.age,  { 'label':'Quel est votre age? ','attr':{'placeholder':'Age...'}})}}
{{ form_row(form.password,  { 'label':'Mot de passe ','attr':{'placeholder':'Mot de passe...'}})}}
{{ form_row(form.confirm_password,  { 'label':'Confirmation du mot de passe ','attr':{'placeholder':'Répétez votre mot de passe...'}})}}

<button type="submit" class="btn btn-success"> sign in </button>

{{ form_end(form)}}

{% endblock %}